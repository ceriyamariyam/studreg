<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#af8fe7"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME STUDENT"
            android:textSize="30dp"/>
        <ImageView
            android:src="@drawable/addtion"
            android:id="@+id/i1"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/wel_r"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:src="@drawable/z"
            android:id="@+id/i2"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/wel_s"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:src="@drawable/x"
            android:id="@+id/i3"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/wel_d"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:src="@drawable/v"
            android:id="@+id/i4"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/wel_m"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:background="@drawable/regstyle"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logout"/>
<Button
    android:background="@drawable/regstyle"
    android:textColor="#ffffff"
    android:layout_margin="10dp"
    android:textSize="20dp"
    android:id="@+id/bv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="View all"/>


    </LinearLayout>
</ScrollView>